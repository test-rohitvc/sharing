version: '3.8'

services:
  # 1. The Shared Database
  flowable-db:
    image: postgres:16-alpine
    restart: always
    environment:
      - POSTGRES_PASSWORD=flowable
      - POSTGRES_USER=flowable
      - POSTGRES_DB=flowable
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - flowable-net
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U flowable"]
      interval: 10s
      timeout: 5s
      retries: 5

  # 2. The UI Application (Port 8080)
  flowable-ui:
    image: flowable/flowable-ui:6.8.0
    restart: always
    depends_on:
      flowable-db:
        condition: service_healthy
    environment:
      - SERVER_PORT=8080
      - SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
      - SPRING_DATASOURCE_URL=jdbc:postgresql://flowable-db:5432/flowable
      - SPRING_DATASOURCE_USERNAME=flowable
      - SPRING_DATASOURCE_PASSWORD=flowable
      # Master switch: Let UI manage the schema updates
      - FLOWABLE_DATABASE_SCHEMA_UPDATE=true
    ports:
      - "8080:8080"
    networks:
      - flowable-net

  # 3. The REST API (Port 8081)
  flowable-rest:
    image: flowable/flowable-rest:6.8.0
    restart: always
    depends_on:
      flowable-db:
        condition: service_healthy
      # Wait for UI to start first to handle DB schema creation cleanly
      flowable-ui:
        condition: service_started
    environment:
      - SERVER_PORT=8080  # Internal port is still 8080
      - SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver
      - SPRING_DATASOURCE_URL=jdbc:postgresql://flowable-db:5432/flowable
      - SPRING_DATASOURCE_USERNAME=flowable
      - SPRING_DATASOURCE_PASSWORD=flowable
      # Prevent REST app from trying to update schema at same time as UI
      - FLOWABLE_DATABASE_SCHEMA_UPDATE=false
      # REQUIRED: REST API Security Config (otherwise you cannot login)
      - FLOWABLE_REST_APP_ADMIN_USER-ID=admin
      - FLOWABLE_REST_APP_ADMIN_PASSWORD=test
      - FLOWABLE_REST_APP_ADMIN_FIRST-NAME=Rest
      - FLOWABLE_REST_APP_ADMIN_LAST-NAME=Admin
    ports:
      - "8081:8080" # Maps Host 8081 -> Container 8080
    networks:
      - flowable-net

volumes:
  postgres_data:

networks:
  flowable-net:
